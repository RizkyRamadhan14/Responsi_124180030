<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.KasusCovidFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_coronavirus2"
            android:layout_weight="1"/>

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rahadatul Rizky Ramadhan \n 124180030"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:layout_weight="10"
        />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_coronavirus2"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kasus Covid-19 Jawa Barat"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_kasusCovid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/kasus_list"/>

    </LinearLayout>
</FrameLayout>